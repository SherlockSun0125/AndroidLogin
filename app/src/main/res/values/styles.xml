<resources>

    <!-- Activity themes -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--<item name="actionBarStyle">@style/MyActionBarStyle</item>-->

        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/my_color</item>
        <item name="colorPrimaryDark">@color/my_darker_color</item>
        <!--<item name="colorAccent">@color/my_accent</item>-->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.DescriptionBar">
        <item name="android:background">#333</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/page_margin</item>
        <item name="android:paddingRight">@dimen/page_margin</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget" />

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/tile</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">#424242</item>
        <item name="android:navigationBarColor">#424242</item>
        <!--<item name="android:background">#F44336</item>-->

    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar">
        <item name="rippleBackport">true</item>
        <item name="colorPrimary">@color/my_color</item>
        <item name="colorPrimaryDark">@color/my_darker_color</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <color name="my_color">#424242</color>
    <color name="my_darker_color">#616161</color>
    <!--<color name="my_accent">#29B6F6</color>-->
</resources>
