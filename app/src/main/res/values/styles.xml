<resources>

    <!-- Activity themes -->

    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!--<item name="android:background">#09c</item>-->

    </style>

    <style name="Widget.DescriptionBar">
        <item name="android:background">#333</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/page_margin</item>
        <item name="android:paddingRight">@dimen/page_margin</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget" />

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/tile</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="LoginTheme" parent="android:Theme.Material">
        <!--<item name="android:background">#ff194f56</item>-->
        <item name="android:windowBackground">@drawable/background</item>
    </style>

</resources>
